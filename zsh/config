# Ghostty ships a custom terminfo that isn't installed on remote Linux hosts.
# Fall back to xterm-256color so ZLE cursor math works correctly over SSH.
[[ "$(uname)" != "Darwin" && "$TERM" == "xterm-ghostty" ]] && export TERM="xterm-256color"

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# gnu utils (macOS only)
[[ "$(uname)" == "Darwin" ]] && PATH="/usr/local/opt/grep/libexec/gnubin:$PATH"

# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
if [[ "$(uname)" == "Darwin" ]]; then
  ZSH_THEME="robbyrussell"
else
  ZSH_THEME="simple"
fi

# User configuration

# Homebrew (macOS only)
[[ "$(uname)" == "Darwin" ]] && eval "$(/opt/homebrew/bin/brew shellenv)"

# docker
fpath=(~/.zsh/completion $fpath)
autoload -Uz compinit && compinit -i

# pnpm
export PNPM_HOME=$HOME/.pnpm
PATH=$PNPM_HOME:$PATH
