# zoxide aliases
alias zi='z -i'  # interactive selection

# moving around
alias ..='cd ..'
alias ...='cd ../../'

# LSD
alias ls='lsd'

# tmux
alias td='tmux new-session -A -s dev'
alias tp='tmux new-session -A -s prod'
alias ta='tmux a'

# fzf
alias cf='cd $(fff)'

# neovim
alias vi='nvim'
alias vim='nvim'

# git
alias gl='pretty_git_log'
alias gst='git status'
alias gc='git commit'
alias gca='git commit --amend'
alias ga='git amend'
alias gd='git diff'
alias gph='git poh'
