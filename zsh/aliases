# zoxide aliases
alias zi='z -i'  # interactive selection

# moving around
alias ..='cd ..'
alias ...='cd ../../'

# LSD (no icons on Linux â€” terminals rarely have nerd fonts)
if [[ "$(uname)" == "Darwin" ]]; then
  alias ls='lsd'
else
  alias ls='lsd --icon=never'
fi

# tmux
t() { tmux attach 2>/dev/null || tmux new-session -s main }
alias td='tmux new-session -A -s dev'
alias tp='tmux new-session -A -s prod'
alias ta='tmux a'

# fzf
alias cf='cd $(fff)'

# neovim
alias vi='nvim'
alias vim='nvim'

# git
alias gl="command git log"
alias gpl='pretty_git_log'
alias gst='command git status'
alias gc='command git commit'
alias gca='command git commit --amend'
alias ga='command git amend'
alias gd='command git diff'
alias gph='command git poh'
