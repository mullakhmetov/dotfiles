[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[user]
	name = Artur Mullakhmetov
	email = mullakhmetov.art@gmail.com
[core]
	autocrlf = false
	safecrlf = false
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	co = checkout
    sc = switch -c
	com = checkout main
	st = status
	poh = push origin HEAD
	wip = commit -am "WIP"
	amend = commit -a --amend
    rom = rebase origin/main
    from = !git fetch origin && git rebase origin/main
[diff]
        tool = difftastic

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[difftool "vimdiff"]
        cmd = vimdiff "$LOCAL" "$REMOTE"
[pager]
        difftool = true
[merge]
        tool = vimdiff
    	conflictstyle = diff3
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
